            .panel-collapse.collapse.in#collapse-payment-address(style='height: auto')
              .panel-body
                .row
                  .col-sm-6
                    fieldset#account
                      legend Your Personal Details
                      .form-group(style='display: none')
                        label.control-label Customer Group
                        .radio
                          label
                            input(type='radio', checked='', value='1', name='customer_group_id')
                            |  Default
                      .form-group.required
                        label.control-label(for='input-payment-firstname') First Name
                        input.form-control#input-payment-firstname(type='text', placeholder='First Name', name='firstname')
                      .form-group.required
                        label.control-label(for='input-payment-lastname') Last Name
                        input.form-control#input-payment-lastname(type='text', placeholder='Last Name', name='lastname')
                      .form-group.required
                        label.control-label(for='input-payment-email') E-Mail
                        input.form-control#input-payment-email(type='text', placeholder='E-Mail', name='email')
                      .form-group.required
                        label.control-label(for='input-payment-telephone') Telephone
                        input.form-control#input-payment-telephone(type='text', placeholder='Telephone', name='telephone')
                      .form-group
                        label.control-label(for='input-payment-fax') Fax
                        input.form-control#input-payment-fax(type='text', placeholder='Fax', name='fax')
                    fieldset
                      legend Your Password
                      .form-group.required
                        label.control-label(for='input-payment-password') Password
                        input.form-control#input-payment-password(type='password', placeholder='Password', name='password')
                      .form-group.required
                        label.control-label(for='input-payment-confirm') Password Confirm
                        input.form-control#input-payment-confirm(type='password', placeholder='Password Confirm', name='confirm')
                  .col-sm-6
                    fieldset#address.required
                      legend Your Address
                      .form-group
                        label.control-label(for='input-payment-company') Company
                        input.form-control#input-payment-company(type='text', placeholder='Company', name='company')
                      .form-group.required
                        label.control-label(for='input-payment-address-1') Address 1
                        input.form-control#input-payment-address-1(type='text', placeholder='Address 1', name='address_1')
                      .form-group
                        label.control-label(for='input-payment-address-2') Address 2
                        input.form-control#input-payment-address-2(type='text', placeholder='Address 2', name='address_2')
                      .form-group.required
                        label.control-label(for='input-payment-city') City
                        input.form-control#input-payment-city(type='text', placeholder='City', name='city')
                      .form-group.required
                        label.control-label(for='input-payment-postcode') Post Code
                        input.form-control#input-payment-postcode(type='text', placeholder='Post Code', name='postcode')
                      .form-group.required
                        label.control-label(for='input-payment-country') Country
